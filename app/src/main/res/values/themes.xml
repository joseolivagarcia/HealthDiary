<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthDiary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- theme personalizado -->
    <style name="Theme.HealthDiaryPerso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#303F9F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1976D2</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">#512DA8</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Estilo para los edit text de la intro de datos de presion arterial -->
    <style name="edit_text_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">0</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">number</item>
        <item name="maxWidth">6dp</item>
    </style>
</resources>